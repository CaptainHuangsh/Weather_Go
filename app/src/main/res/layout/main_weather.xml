<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/weather_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl_custom"
        android:layout_margin="16dp">

        <!--<include android:id="@+id/main_card"
            layout="@layout/main_forecast"/>-->
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/main_swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<ListView

                android:id="@+id/weather_forecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#FFCC00">

            </ListView>-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.example.owen.weathergo"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modules.main.activity.WeatherMain">


        <EditText
            android:id="@+id/hsh_weather_city_editview"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_margin="16dp"
            android:ems="10"
            android:hint="城市"
            android:visibility="gone" />


        <Button
            android:id="@+id/hsh_search_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/hsh_weather_city_editview"
            android:text="@string/weather"
            android:visibility="gone" />


        <TextView
            android:id="@+id/weather_suggesstions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hsh_search_weather"
            android:layout_margin="16dp"
            android:visibility="gone" />


    </RelativeLayout>
</LinearLayout>