<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/weather_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl_custom"
        android:layout_margin="16dp">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/main_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            card_view:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tl_custom"
                android:layout_margin="16dp">

                <ImageView

                    android:id="@+id/weather_img"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:layout_below="@+id/tl_custom"
                    android:src="@drawable/weather" />


                <TextView
                    android:id="@+id/weather_temp_max"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:gravity="right"
                    android:text="@string/hsh_temp_max"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/weather_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/weather_temp_max"
                    android:text="@string/hsh_temperature"
                    android:textSize="48dp" />

                <TextView
                    android:id="@+id/weather_temp_min"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/weather_temp_max"
                    android:layout_marginTop="30dp"
                    android:gravity="right"
                    android:text="@string/hsh_temp_min"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/weather_country_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/weather_temp_min"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/weather_wind_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/hsh_wind_speed" />

                    <TextView
                        android:id="@+id/weather_country"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:text="@string/hsh_country" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/main_swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_card_view">

            <!--<ListView

                android:id="@+id/weather_forecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#FFCC00">

            </ListView>-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.example.owen.weathergo"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modules.main.activity.WeatherMain">


        <EditText
            android:id="@+id/hsh_weather_city_editview"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_margin="16dp"
            android:ems="10"
            android:hint="城市"
            android:visibility="gone" />


        <Button
            android:id="@+id/hsh_search_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/hsh_weather_city_editview"
            android:text="@string/weather"
            android:visibility="gone" />


        <TextView
            android:id="@+id/weather_suggesstions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hsh_search_weather"
            android:layout_margin="16dp"
            android:visibility="gone" />


    </RelativeLayout>
</LinearLayout>