


    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dl_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.WeatherMain">
    <!--Toolbar-->
    <include layout="@layout/custom_toolbar"
        android:id="@+id/tl_custom"
        />


    <RelativeLayout
        android:layout_below="@+id/tl_custom"
        android:id="@+id/weather_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/weather_img"
            android:src="@drawable/hsh_weather"
            android:layout_width="135dp"
            android:layout_height="135dp" />



        <TextView
            android:gravity="right"
            android:id="@+id/weather_temp_max"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/hsh_temp_max"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/weather_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/weather_temp_max"
            android:text="@string/hsh_temperature"
            android:textSize="48dp" />
        <TextView
            android:gravity="right"
            android:id="@+id/weather_temp_min"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/weather_temp_max"
            android:layout_marginTop="30dp"
            android:text="@string/hsh_temp_min"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/weather_country_wind"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weather_temp_min"
            android:orientation="horizontal">
            <TextView

                android:id="@+id/weather_wind_speed"
                android:text="@string/hsh_wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/weather_country"
                android:text="@string/hsh_country"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

    </RelativeLayout>


    <EditText
        android:layout_margin="16dp"
        android:id="@+id/hsh_weather_city_editview"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/weather_info"
        android:ems="10"
        android:visibility="gone"
        android:hint="城市" />






    <Button
        android:visibility="gone"
        android:id="@+id/hsh_search_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_info"
        android:layout_toRightOf="@id/hsh_weather_city_editview"
        android:text="@string/weather" />
    <!--<android.support.design.widget.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".MyActivity"/>-->

    <TextView
        android:id="@+id/weather_suggesstions"
        android:layout_margin="16dp"
        android:layout_below="@+id/hsh_search_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/weather_suggesstion"
        android:layout_below="@+id/hsh_search_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</RelativeLayout>
        <LinearLayout
            android:backgroundTint="@color/bgcolor"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_gravity="start">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/touxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:textSize="36dp"
                android:text="最帅的人"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/lv_left_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:text="DrawerLayout" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
