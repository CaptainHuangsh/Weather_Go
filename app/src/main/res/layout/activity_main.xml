<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherMain">
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/id_drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <FrameLayout
            android:id="@+id/id_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/id_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111" />
        </FrameLayout>
        <LinearLayout
            android:id="@+id/id_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#E0EEE0"
            android:orientation="vertical" >
            <ListView
                android:id="@+id/id_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="#CD853F"
                android:dividerHeight="2dp" >
            </ListView>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/weather_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolBarBG"
        android:minHeight="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/weather_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_toolbar"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/weather_img"
            android:src="@drawable/hsh_weather"
            android:layout_width="135dp"
            android:layout_height="135dp" />



        <TextView
            android:gravity="right"
            android:id="@+id/weather_temp_max"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/hsh_temp_max"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/weather_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/weather_temp_max"
            android:text="@string/hsh_temperature"
            android:textSize="48dp" />
        <TextView
            android:gravity="right"
            android:id="@+id/weather_temp_min"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/weather_temp_max"
            android:layout_marginTop="30dp"
            android:text="@string/hsh_temp_min"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/weather_country_wind"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weather_temp_min"
            android:orientation="horizontal">
            <TextView

                android:id="@+id/weather_wind_speed"
                android:text="@string/hsh_wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/weather_country"
                android:text="@string/hsh_country"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

    </RelativeLayout>


    <EditText
        android:layout_margin="16dp"
        android:id="@+id/hsh_weather_city_editview"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/weather_info"
        android:ems="10"
        android:hint="城市" />






    <Button
        android:id="@+id/hsh_search_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_info"
        android:layout_toRightOf="@id/hsh_weather_city_editview"
        android:text="@string/weather" />
    <!--<android.support.design.widget.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".MyActivity"/>-->

</RelativeLayout>
